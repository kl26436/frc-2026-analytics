rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sessions/{sessionId} {
      // Any authenticated user can read (they need the sessionId/code to access)
      allow read: if request.auth != null;

      // Only the creator can create
      allow create: if request.auth != null
                    && request.resource.data.createdBy == request.auth.uid;

      // Any authenticated user can update (joining adds them to participants,
      // editors/admin make game-state changes â€” all require write access)
      allow update: if request.auth != null;

      // Only creator can delete
      allow delete: if request.auth != null
                    && resource.data.createdBy == request.auth.uid;
    }
  }
}
